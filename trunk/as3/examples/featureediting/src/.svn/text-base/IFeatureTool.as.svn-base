package {
	
	import com.myavatareditor.avatarcore.display.ArtSprite;
	
	/**
	 * A custom interface used by Feature tool classes to enforce
	 * the methods used by the FeatureEditing class when it switches
	 * between different Feature tools.
	 * @author Trevor McCauley; www.senocular.com
	 */
	public interface IFeatureTool {
		function startAction(artSprite:ArtSprite):void;
		function whileAction():void;
		function endAction():void;
	}
}